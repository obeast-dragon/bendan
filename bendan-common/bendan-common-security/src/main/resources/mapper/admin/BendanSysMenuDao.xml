<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.obeast.security.business.dao.BendanSysMenuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.obeast.business.entity.BendanSysMenu" id="sysMenuMap">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="level" column="level"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
        <result property="icon" column="icon"/>
        <result property="path" column="path"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="createId" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateId" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    <select id="listMenusByRoleId" resultType="com.obeast.business.entity.BendanSysMenu">
        SELECT sm.id,
               sm.parent_id,
               sm.name,
               sm.url,
               sm.icon,
               sm.path,
               sm.sort,
               sm.status,
               sm.create_id,
               sm.create_time,
               sm.update_id,
               sm.update_time
        FROM bendan_sys_menu AS sm
                 LEFT JOIN bendan_sys_role_menu AS srm ON sm.id = srm.menu_id
        WHERE sm.status = 0
          AND srm.role_id = #{roleId}
        ORDER BY sm.sort DESC
    </select>


</mapper>